{
  "name": "angular-seed-browserify",
  "private": true,
  "version": "1.0.0",
  "description": "Integration of Angular, Browserify and gulp",
  "repository": "https://github.com/gploumpis/angular-seed-browserify",
  "license": "MIT",
  "devDependencies": {
    "bower": "^1.4.1",
    "browserify": "^11.0.0",
    "browserify-css": "^0.6.1",
    "browserify-istanbul": "^0.2.1",
    "browserify-shim": "^3.8.10",
    "gulp": "^3.9.0",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-uglify": "^1.2.0",
    "gulp-util": "^3.0.6",
    "http-server": "^0.8.0",
    "jasmine-core": "^2.3.4",
    "karma": "^0.13.3",
    "karma-browserify": "^4.2.1",
    "karma-chrome-launcher": "^0.2.0",
    "karma-coverage": "^0.4.2",
    "karma-firefox-launcher": "^0.1.6",
    "karma-jasmine": "^0.3.6",
    "karma-junit-reporter": "^0.3.3",
    "lodash.assign": "^3.2.0",
    "partialify": "^3.1.5",
    "protractor": "^2.1.0",
    "shelljs": "^0.5.1",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.3.0"
  },
  "scripts": {
    "postinstall": "bower install",
    "prestart": "npm install",
    "start": "http-server -a localhost -p 8000 -c-1",
    "pretest": "npm install",
    "test": "karma start karma.conf.js",
    "test-single-run": "karma start karma.conf.js  --single-run",
    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor e2e-tests/protractor.conf.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim",
      "partialify",
      "browserify-css"
    ]
  },
  "browser": {
    "angular": "./app/bower_components/angular/angular.js",
    "ngRoute": "./app/bower_components/angular-route/angular-route.js",
    "ngMock": "./app/bower_components/angular-mocks/angular-mocks.js",
    "ui.router":"./app/bower_components/angular-ui-router/release/angular-ui-router.js",
    "modernizr":"./app/bower_components/html5-boilerplate/dist/js/vendor/modernizr-2.8.3.min.js"
  },
  "browserify-shim": {
    "angular": {
      "exports": "angular"
    },
    "ngRoute": {
      "depends": [
        "angular:angular"
      ],
      "exports": "angular.module('ngRoute')"
    },
    "ui.router": {
      "depends": [
        "angular:angular"
      ],
      "exports": "angular.module('ui.router')"
    },
    "ngMock": {
      "depends": [
        "angular:angular"
      ],
      "exports": "angular.mock"
    },
    "modernizr": {
      "exports": "global:Modernizr"
    }
  },
  "browserify-css": {
    "rootDir": "./dist"
  }
}
